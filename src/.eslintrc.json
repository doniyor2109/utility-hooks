{
  "root": true,
  "extends": "@dc0de/eslint-config-react",
  "rules": {
    "react-hooks/exhaustive-deps": [
      "error",
      {
        "additionalHooks": "^(useMemoWith)$"
      }
    ],
    "import/no-internal-modules": [
      "error",
      {
        "allow": ["**/src/**"]
      }
    ]
  }
}
