{
  "root": true,
  "settings": {
    "react": { "version": "detect" }
  },
  "overrides": [
    { "files": "*.js", "extends": "plugin:@superdispatch/node" },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@superdispatch/react",
        "plugin:@superdispatch/typescript"
      ]
    },
    {
      "files": ["**/__tests__/**/*.ts", "**/__tests__/**/*.ts"],
      "extends": "plugin:@superdispatch/jest"
    }
  ]
}
