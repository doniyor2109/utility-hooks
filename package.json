{
  "name": "utility-hooks",
  "version": "0.5.4",
  "description": "Collection of low-level React hooks.",
  "repository": "git@github.com:umidbekkarimov/utility-hooks.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "scripts": {
    "build": "npx pika build",
    "prebump": "npm run lint && npx tsc && npm run build",
    "bump": "npx pika publish --no-publish",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "version": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.8.1",
    "@pika/plugin-build-types": "^0.8.1",
    "@pika/plugin-build-web": "^0.8.1",
    "@pika/plugin-bundle-types": "^0.8.1",
    "@pika/plugin-standard-pkg": "^0.8.1",
    "@superdispatch/eslint-plugin": "^0.1.30",
    "@superdispatch/js-tools": "^0.1.30",
    "@superdispatch/prettier-config": "^0.1.26",
    "@superdispatch/tsconfig": "^0.1.13",
    "@testing-library/react": "^9.1.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.9.16",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "codecov": "^3.6.1",
    "eslint": "^6.7.2",
    "jest": "^24.8.0",
    "mitt": "^1.2.0",
    "prettier": "^1.18.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "typescript": "^3.7.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*",
            "__testutils__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-bundle-types"
      ]
    ]
  }
}
