{
  "name": "utility-hooks",
  "version": "0.4.0",
  "description": "Collection of low-level React hooks.",
  "repository": "git@github.com:umidbekkarimov/utility-hooks.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "scripts": {
    "build": "npx pika build",
    "prebump": "npm run lint && npx tsc && npm run build",
    "bump": "npx pika publish --no-publish",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "version": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.6.1",
    "@pika/plugin-build-types": "^0.6.1",
    "@pika/plugin-build-web": "^0.6.1",
    "@pika/plugin-standard-pkg": "^0.6.1",
    "@superdispatch/eslint-plugin": "^0.1.16",
    "@superdispatch/js-tools": "^0.1.15",
    "@superdispatch/tsconfig": "^0.1.13",
    "@testing-library/react": "^9.1.4",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.4.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "react": "^16.8.4"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*",
            "__testutils__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.types.json"
        }
      ]
    ]
  }
}
