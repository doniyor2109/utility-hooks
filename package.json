{
  "name": "utility-hooks",
  "version": "0.6.1",
  "description": "Collection of low-level React hooks.",
  "repository": "git@github.com:umidbekkarimov/utility-hooks.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "scripts": {
    "build": "npx pika build",
    "prebump": "npx tsc && npm run lint",
    "bump": "npx pika publish --no-publish",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "version": "npm run build"
  },
  "devDependencies": {
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@superdispatch/babel-preset": "^0.1.44-alpha.0",
    "@superdispatch/eslint-plugin": "^0.1.45",
    "@superdispatch/js-tools": "^0.1.44-alpha.0",
    "@superdispatch/prettier-config": "^0.1.26",
    "@superdispatch/tsconfig": "^0.1.13",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.3",
    "@types/react": "^16.9.23",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "prettier": "^1.18.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-test-renderer": "^16.13.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*",
            "__testutils__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-bundle-types"
      ]
    ]
  }
}
