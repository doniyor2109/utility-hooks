{
  "license": "MIT",
  "name": "utility-hooks",
  "version": "0.3.0",
  "description": "Collection of low-level React hooks.",
  "repository": "git@github.com:umidbekkarimov/utility-hooks.git",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "scripts": {
    "pub": "yarn pika-pack publish",
    "ci": "yarn lint && yarn tsc && yarn cover && yarn build",
    "lint": "cg lint",
    "test": "jest",
    "tdd": "jest --watch",
    "cover": "jest --coverage",
    "build": "yarn pika-pack build",
    "version": "yarn build"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*",
            "__testutils__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.types.json"
        }
      ]
    ]
  },
  "peerDependencies": {
    "react": "^16.8.4"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@dc0de/eslint-config": "^0.7.1",
    "@dc0de/eslint-config-base": "^0.7.0",
    "@dc0de/eslint-config-node": "^0.7.1",
    "@dc0de/eslint-config-react": "^0.7.1",
    "@pika/pack": "^0.4.0",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-types": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "@testing-library/react": "^8.0.6",
    "@testing-library/react-hooks": "^1.1.0",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "code-guard": "^0.1.2",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-typescript": "^1.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "import-sort": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "typescript": "^3.5.3"
  }
}
